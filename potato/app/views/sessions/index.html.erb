<div class="row d-none" id="main-wrapper">
<div class="accordion" id="accordionExample">
<div class="accordion-item">
  <h2 class="accordion-header" id="headingOne">
    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
      Global State
    </button>
  </h2>
  <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
    <div class="accordion-body">
        <div class="row">
                <div class="col-8">
                  <p>Total Constituent Simples: <span id='gid'> <%= @gid  %> </span></p> <br>
                  <p>Total Minted Baskets: <span id='gid'> <%= @basket_nr  %> </span></p> <br>
                  <p>Total Registered Farmers: <span id='gid'> <%= @farmers_nr  %> </span></p> <br>
                  <p>Total Number of Unique Areas: <span id='gid'> <%= @area_nr  %> </span></p> <br>
                </div>

        </div>
    </div>
  </div>
</div>
<div class="accordion-item">
  <h2 class="accordion-header" id="headingTwo">
    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
      My Data
    </button>
  </h2>
<div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
<div class="accordion-body">
    <div class="row">
      <div class="col-4">
        <div class="row">
              <h6>
                Farmer: <% if @farmer %>  <a href= <%= "ipfs://#{@farmer.data_url}" %> >data</a> <% else %> "Not Farmer" <% end %>
              </h6>
        </div>
        <div class="row">
            <h6>
              Consumer:  <% if @consumer %>  <a href= <%= "ipfs://#{@consumer.data_url}" %>>data</a> <% else %> "No Consumer Profile" <% end %>
            </h6>
        </div>
        <div class="row">
          <h6>
            Governed Areas: <% if @area %>  <a href= <%= "ipfs://#{@area.data_url}" %>>data</a> <% else %> "No Areas Goverened" <% end %>
          </h6>
        </div>
      </div>
      <div class="col-8">
      <h6> Owned Baskers </h6>
      <hr class="text-primary border-1">
        <div class="row">
        <div class="col-4">
          <p>As consumer</p>
          <hr>
          <% if @baskets_consumer %> 
          <% @baskets_consumer.each do |b| %>
          <p>   
            <a href=<%= "#{b.data_url}" %>> data </a> | nft_id : <%= b.nft_id %> | 
            <a href=<%="ipfs://#{Farmer.find_by(address: b.farmer_address).data_url}"%>> farmer </a> 
          </p>
            <% end %>
            <% else %> 
              <%= "No Baskets Owned" %> 
            <% end %>
          </div>
        <div class="col-4">
        <p>As farmer</p>
        <hr
        <% if @baskets_farmer %> 
        <% @baskets_farmer.each do |b| %>
        <p>   
          <a href=<%= "#{b.data_url}" %>> data </a> | nft_id : <%= b.nft_id %> 
        </p>
          <% end %>
          <% else %> 
            <%= "No Baskets Owned" %> 
          <% end %>
        </div>

        </div>
      </div>
    </div>
</div>
</div>
</div>
<div class="accordion-item">
  <h2 class="accordion-header" id="headingThree">
    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
      Mint Basket
    </button>
  </h2>
  <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
